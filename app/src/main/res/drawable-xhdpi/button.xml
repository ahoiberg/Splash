<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <gradient
                android:startColor="#ff0077ef"
                android:endColor="#ff006099"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="#ff630099" />
            <corners
                android:radius="6dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>
    <item>
        <shape>
            <gradient
                android:startColor="#ff0077ef"
                android:endColor="#af0077ef"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="#ff630099" />
            <corners
                android:radius="6dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>
</selector>