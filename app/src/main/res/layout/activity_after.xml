<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".AfterRunActivity"
    android:id="@+id/fdfdffdf">


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Return to Current Running Conditions"
        android:id="@+id/beforeRun"
        android:onClick="onBeforeRun"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

   <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Run Completed"
        android:id="@+id/textView"
        android:layout_gravity="left|top"
        android:layout_below="@+id/logo"
        android:layout_marginTop="50px"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Total Steps"
        android:id="@+id/steps"
        android:layout_below="@+id/textView"
        android:layout_alignRight="@+id/beforeRun"
        android:layout_alignEnd="@+id/beforeRun" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Water (ml)"
        android:id="@+id/cadence"
        android:layout_below="@+id/steps"
        android:layout_alignRight="@+id/beforeRun"
        android:layout_alignEnd="@+id/beforeRun" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Pronation"
        android:id="@+id/liters"
        android:layout_below="@+id/cadence"
        android:layout_alignRight="@+id/beforeRun"
        android:layout_alignEnd="@+id/beforeRun" />

    <TextView
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="0"
        android:id="@+id/tstValue"
        android:layout_alignBottom="@+id/steps"
        android:layout_alignEnd="@+id/afterRun"
        />

    <TextView
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="0"
        android:id="@+id/mlValue"
        android:layout_alignBottom="@+id/cadence"
        android:layout_alignEnd="@+id/afterRun"
        />

    <TextView
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="0"
        android:id="@+id/proValue"
        android:layout_alignBottom="@+id/liters"
        android:layout_alignEnd="@+id/afterRun"
        />



</RelativeLayout>