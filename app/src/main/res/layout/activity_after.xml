<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".AfterRunActivity"
    android:id="@+id/">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Good Job!"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/tst"
        android:layout_toEndOf="@+id/tst" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Return to Current Running Conditions"
        android:id="@+id/beforeRun"
        android:onClick="onBeforeRun"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pronation"
        android:id="@+id/age"
        android:layout_above="@+id/tst"
        android:layout_toRightOf="@+id/ageValue"
        android:layout_toEndOf="@+id/ageValue"
        android:layout_marginBottom="49dp" /> 

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Total Steps Taken"
        android:id="@+id/tst"
        android:layout_marginBottom="50dp"
        android:layout_above="@+id/twc"
        android:layout_alignLeft="@+id/twc"
        android:layout_alignStart="@+id/twc" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="0"
        android:id="@+id/tstValue"
        android:layout_alignTop="@+id/tst"
        android:layout_alignLeft="@+id/mLValue"
        android:layout_alignStart="@+id/mLValue" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Total Water Consumption"
        android:id="@+id/twc"
        android:layout_marginBottom="45dp"
        android:layout_above="@+id/chl"
        android:layout_alignLeft="@+id/chl"
        android:layout_alignStart="@+id/chl" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="0 mL"
        android:id="@+id/mLValue"
        android:layout_marginLeft="33dp"
        android:layout_marginStart="33dp"
        android:layout_alignTop="@+id/twc"
        android:layout_toRightOf="@+id/textView"
        android:layout_toEndOf="@+id/textView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Current Hydration Level"
        android:id="@+id/chl"
        android:layout_marginBottom="59dp"
        android:layout_above="@+id/beforeRun"
        android:layout_alignLeft="@+id/age"
        android:layout_alignStart="@+id/age" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="0 %"
        android:id="@+id/chlValue"
        android:layout_below="@+id/twc"
        android:layout_alignLeft="@+id/mLValue"
        android:layout_alignStart="@+id/mLValue" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Normal"
        android:id="@+id/proValue"
        android:layout_alignTop="@+id/age"
        android:layout_alignLeft="@+id/tstValue"
        android:layout_alignStart="@+id/tstValue" />



</RelativeLayout>